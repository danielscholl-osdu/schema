{
  "schemaInfo": {
    "schemaIdentity": {
      "authority": "osdu",
      "source": "osdu",
      "entityType": "FaultSystemWorkProductComponent",
      "schemaVersionMajor": 0,
      "schemaVersionMinor": 2,
      "schemaVersionPatch": 0,
      "id": "osdu:osdu:FaultSystemWorkProductComponent:0.2.0"
    },
    "createdBy": "OSDU Data Definition Group",
    "scope": "SHARED",
    "status": "DEVELOPMENT"
  },
  "schema": {
    "$id": "https://schema.osdu.opengroup.org/json/swps/work-product/FaultSystemWorkProductComponent/1",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "FaultSystemWorkProductComponent",
    "description": "A set of picked faults.",
    "type": "object",
    "properties": {
      "ResourceTypeID": {
        "description": "The SRN of the resource's resource type.",
        "type": "string",
        "pattern": "srn:type:work-product-component/FaultSystem:[0-9]*$"
      },
      "ResourceID": {
        "description": "The SRN which identifies this SDU resource object at the version level.",
        "type": "string",
        "pattern": "srn:work-product-component/FaultSystem:[^:]+:[0-9]+$"
      },
      "ResourceHomeRegionID": {
        "description": "The name of the home [cloud environment] region for this SDU resource object.",
        "type": "string",
        "pattern": "srn:reference-data/SDURegion:[A-Za-z0-9-]+:[0-9]*$"
      },
      "ResourceHostRegionIDs": {
        "description": "The name of the host [cloud environment] region(s) for this SDU resource object.",
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "srn:reference-data/SDURegion:[A-Za-z0-9-]+:[0-9]*$"
        }
      },
      "ResourceObjectCreationDateTime": {
        "description": "Timestamp of the time at which Version 1 of this SDU resource object was originated.",
        "type": "string",
        "format": "date-time"
      },
      "ResourceVersionCreationDateTime": {
        "description": "Timestamp of the time when the current version of this resource entered the SDU.",
        "type": "string",
        "format": "date-time"
      },
      "ResourceCurationStatus": {
        "description": "Describes the current Curation status. Possible values - CREATED, CURATING, CURATED.",
        "type": "string",
        "pattern": "srn:reference-data/ResourceCurationStatus:[^:]+:[0-9]*$"
      },
      "ResourceLifecycleStatus": {
        "description": "Describes the current Resource Lifecycle status. Possible values - LOADING, RECIEVED, ACCEPTED, RESCINDED, DELETED,",
        "type": "string",
        "pattern": "srn:reference-data/ResourceLifecycleStatus:[^:]+:[0-9]*$"
      },
      "ResourceSecurityClassification": {
        "description": "Classifies the security level of the resourcse. Possible values = RESTRICTED, CLASSIFIED, CONFIDENTIAL, MOST-CONFIDENTIAL  ",
        "type": "string",
        "pattern": "srn:reference-data/ResourceSecurityClassification:[^:]+:[0-9]*$"
      },
      "Data": {
        "type": "object",
        "properties": {
          "GroupTypeProperties": {
            "allOf": [
              {
                "$ref": "osdu:osdu:AbstractWPCGroupType:0.2.0"
              },
              {
                "type": "object",
                "properties": {}
              }
            ]
          },
          "IndividualTypeProperties": {
            "allOf": [
              {
                "$ref": "osdu:osdu:AbstractWorkProductComponent:0.2.0"
              },
              {
                "type": "object",
                "properties": {
                  "SeismicPickingTypeID": {
                    "type": "string",
                    "pattern": "srn:reference-data/SeismicPickingType:[^:]+:[0-9]*$",
                    "description": "Method used to pick faults. E.g.Autotracked, Grid, Manual Picked, Mixed."
                  },
                  "Remark": {
                    "type": "string",
                    "description": "Optional comment to capture interpreter thoughts.  Distinguished from Description which is a general explanation of the object."
                  },
                  "SeismicTraceDataIDs": {
                    "description": "Seismic Volumes picked against",
                    "type": "array",
                    "items": {
                      "type": "string",
                      "pattern": "srn:work-product-component/SeismicTraceData:[^:]+:[0-9]*$"
                    }
                  },
                  "GeoContext": {
                    "description": "List of area names which provide geographic context to the WPC.  This may include multiple types or multiple values of the same type.",
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "GeoPoliticalEntityID": {
                          "type": "string",
                          "description": "Reference to GeopoliticalEntity.",
                          "pattern": "srn:master-data/GeoPoliticalEntity:[^:]+:[0-9]*$"
                        },
                        "GeoPoliticalEntityTypeID": {
                          "type": "string",
                          "description": "The kind of area such as Country or Block, duplicated here from GeoPoliticalEntity object for application convenience.",
                          "pattern": "srn:reference-data/GeopoliticalEntityType:[^:]+:[0-9]*$"
                        }
                      }
                    }
                  },
                  "FieldID": {
                    "description": "The Field where the Fault System is located.",
                    "type": "array",
                    "items": {
                      "type": "string",
                      "pattern": "srn:master-data/Field:[^:]+:[0-9]*$"
                    }
                  },
                  "BasinID": {
                    "description": "The Basin where the Fault System is located.",
                    "type": "array",
                    "items": {
                      "type": "string",
                      "pattern": "srn:reference-data/Basin:[^:]+:[0-9]*$"
                    }
                  },
                  "PlayID": {
                    "description": "The Play where the Fault System is located.",
                    "type": "array",
                    "items": {
                      "type": "string",
                      "pattern": "srn:reference-data/Play:[^:]+:[0-9]*$"
                    }
                  },
                  "ProspectID": {
                    "description": "The Prospect where the Fault System is located.",
                    "type": "array",
                    "items": {
                      "type": "string",
                      "pattern": "srn:reference-data/Prospect:[^:]+:[0-9]*$"
                    }
                  },
                  "SeismicDomainTypeID": {
                    "type": "string",
                    "pattern": "srn:reference-data/SeismicDomainType:[^:]+:[0-9]*$",
                    "description": "Vertical domain of faults.  E.g. Time, Depth"
                  },
                  "SeismicDomainUOM": {
                    "type": "string",
                    "pattern": "srn:reference-data/UnitOfMeasure:[^:]+:[0-9]*$",
                    "description": "Unit of measurement for vertical domain"
                  },
                  "HorizontalCRSID": {
                    "type": "string",
                    "description": "The CRS for surface coordinates used in fault locations if not specified in File.",
                    "pattern": "srn:reference-data/HorizontalCRS:[^:]+:[0-9]*"
                  },
                  "BinGridID": {
                    "type": "string",
                    "pattern": "srn:work-product-component/SeismicBinGrid:[^:]+:[0-9]*$",
                    "description": "the Bin Grid of the Fault System when coordinates are specified in seismic bin inline/crossline."
                  },
                  "VerticalDatumOffset": {
                    "type": "number",
                    "description": "Datum value, the elevation of zero time/depth on the vertical axis in the domain of seismicdomaintype relative to the vertical reference datum used (usually MSL). Positive is upward from zero elevation to seismic datum)."
                  },
                  "VerticalDatumUOM": {
                    "type": "string",
                    "pattern": "srn:reference-data/UnitOfMeasure:[^:]+:[0-9]*$",
                    "description": "Unit of measure for vertical datum"
                  },
                  "VerticalMeasurementTypeID": {
                    "type": "string",
                    "pattern": "srn:reference-data/VerticalMeasurementType:[^:]+:[0-9]*$",
                    "description": "Identifies a vertical reference datum type. E.g. mean sea level, ground level, mudline."
                  },
                  "ReplacementVelocity": {
                    "type": "number",
                    "description": "Value used to produce vertical static shifts in data"
                  },
                  "ReplacementVelocityUOM": {
                    "type": "string",
                    "pattern": "srn:reference-data/UnitOfMeasure:[^:]+:[0-9]*$",
                    "description": "Replacement Velocity Unit of Measure"
                  },
                  "Faults": {
                    "type": "array",
                    "description": "Array of Faults that comprise the Fault System",
                    "items": {
                      "type": "object",
                      "properties": {
                        "SeismicFaultName": {
                          "type": "string",
                          "description": "Name of an individual fault within a fault system."
                        },
                        "SeismicFaultTypeID": {
                          "type": "string",
                          "pattern": "srn:reference-data/SeismicFaultType:[^:]+:[0-9]*$",
                          "description": "Geological type of fault geometry. E.g. Thrust (thr), Reverse (rev), Normal(norm)"
                        },
                        "SeismicPickingTypeID": {
                          "type": "string",
                          "pattern": "srn:reference-data/SeismicPickingType:[^:]+:[0-9]*$",
                          "description": "Method used to pick faults. E.g.Autotracked, Grid, Manual Picked"
                        },
                        "SeismicFaultLength": {
                          "type": "number",
                          "description": "Maximum linear dimension measured along strike of the slip surface"
                        },
                        "SeismicFaultLengthUOM": {
                          "type": "string",
                          "pattern": "srn:reference-data/UnitOfMeasure:[^:]+:[0-9]*$",
                          "description": "ID of the Unit of Measure of the Length of the Fault"
                        },
                        "SeismicFaultSurfaceArea": {
                          "type": "number",
                          "description": "Surface Area of the Fault Plane"
                        },
                        "SeismicFaultSurfaceAreaUOM": {
                          "type": "string",
                          "pattern": "srn:reference-data/UnitOfMeasure:[^:]+:[0-9]*$",
                          "description": "ID of the Unit of Measure of the Surface Area of the Fault"
                        },
                        "VerticalFaultDipAngle": {
                          "type": "number",
                          "description": "Maximum vertical angle of fault"
                        },
                        "VerticalFaultDipAngleUOM": {
                          "type": "string",
                          "pattern": "srn:reference-data/UnitOfMeasure:[^:]+:[0-9]*$",
                          "description": "ID of the Unit of Measure of the Dip angle of the Fault"
                        },
                        "FaultHeaveNumber": {
                          "type": "number",
                          "description": "Maximum stratigraphic heave, the apparent horizontal component of the net-slip."
                        },
                        "FaultHeaveNumberUOM": {
                          "type": "string",
                          "pattern": "srn:reference-data/UnitOfMeasure:[^:]+:[0-9]*$",
                          "description": "ID of the Unit of Measure of the FaultHeaveNumber"
                        },
                        "FaultNetSlipNumber": {
                          "type": "number",
                          "description": "Net (average) Slip"
                        },
                        "FaultNetSlipNumberUOM": {
                          "type": "string",
                          "pattern": "srn:reference-data/UnitOfMeasure:[^:]+:[0-9]*$",
                          "description": "ID of the Unit of Measure of the FaultNetSlipNumber"
                        },
                        "StratigraphicFaultOffset": {
                          "type": "number",
                          "description": "Maximum vertical offset of faulted strata."
                        },
                        "StratigraphicFaultOffsetUOM": {
                          "type": "string",
                          "pattern": "srn:reference-data/UnitOfMeasure:[^:]+:[0-9]*$",
                          "description": "ID of the Unit of Measure of the StratigraphicFaultOffset"
                        },
                        "Remark": {
                          "type": "string",
                          "description": "Optional comment"
                        },
                        "InterpreterID": {
                          "description": "The person or team who interpreted the fault data.",
                          "type": "string",
                          "pattern": "srn:reference-data/[Person|Organisation]:[^:]+:[0-9]*$"
                        }
                      }
                    }
                  }
                }
              }
            ]
          },
          "ExtensionProperties": {
            "type": "object",
            "properties": {}
          }
        }
      }
    },
    "required": [
      "ResourceID",
      "ResourceTypeID",
      "ResourceHomeRegionID",
      "ResourceHostRegionIDs",
      "ResourceObjectCreationDateTime",
      "ResourceVersionCreationDateTime",
      "ResourceCurationStatus",
      "ResourceLifecycleStatus",
      "ResourceSecurityClassification"
    ],
    "additionalProperties": false
  }
}