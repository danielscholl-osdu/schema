{
    "$id": "https://schema.osdu.opengroup.org/json/swps/reference-data/AbstractWorkProduct/1",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AbstractWorkProduct",
	"description": "Generic reference object containing the universal properties of a Work Product for inclusion in data type specific Work Product objects",
    "type": "object",
    "properties": {
        "Name": {
            "type": "string",
            "description": "Name"
        },
        "Description": {
            "type": "string",
            "description": "Description"
        },
        "CreationDateTime": {
            "type": "string",
            "format": "date-time",
            "description": "Creation DateTime"
        },
        "Tags": {
            "type": "array",
            "description": "Array of Tag Names",
            "items": {
                "type": "string"
            }
        },
        "SpatialPoint": {
            "description": "Spatial Point of the Work Product",
            "$ref": "https://schema.osdu.opengroup.org/json/smds/reference-data/AbstractSpatialLocation/1"
        },
        "SpatialArea": {
            "description": "Spatial Area of the Work Product",
            "$ref": "https://schema.osdu.opengroup.org/json/smds/reference-data/AbstractSpatialLocation/1"
        },
        "SubmitterName": {
            "type": "string",
            "description": "Submitter Name"
        },
        "BusinessActivities": {
            "type": "array",
            "description": "Array of Business Activities",
            "items": {
                "type": "string",
                "description": "Business Activity"
            }
        },
        "AuthorIDs": {
            "type": "array",
            "description": "Array of Author IDs",
            "items": {
                "type": "string"
            }
        },
        "LineageAssertions": {
            "type": "array",
            "description": "Array of Lineage Assertions",
            "items": {
                "type": "object",
                "properties": {
                    "ID": {
                        "type": "string",
                        "pattern": "srn:[-A-Za-z]/[A-Za-z]+:[^:]+:[0-9]*$"
                    },
                    "RelationshipType": {
                        "type": "string",
                        "pattern": "PREDECESSOR|SOURCE|REFERENCE"
                    }
                        
                }
            }
        },
        "Annotations": {
            "type": "array",
            "description": "Array of Annotations",
            "items": {
                "type": "string"
            }
        }
    }
}
