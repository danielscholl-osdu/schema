{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "My schema",
	"definitions": {},
    "properties": {
        "AddressLine1": { "type": "string" },
        "AddressLine2": { "type": "int" },
        "City":         { "type": "string" }
    },
    "required": [ "AddressLine1", "AddressLine2" ],
    "oneOf": [
        {
            "type": "object",
            "properties": {
                "State":   { "type": "string" },
                "ZipCode": { "type": "string" }
            },
            "required": [ "ZipCode" ]
        },
        {
            "type": "object",
            "properties": {
                "County":   { "type": "string" },
                "PostCode": { "type": "string" }
            },
            "required": [ "PostCode" ]
        }
    ]
}